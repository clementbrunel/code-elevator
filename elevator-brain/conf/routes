# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		controllers.Assets.at(path="/public", file)

#Elevator
GET		/call								controllers.Brain.call(atFloor : Int ,to : String)
GET		/go									controllers.Brain.go(floorToGo : Int)
GET		/userHasEntered						controllers.Brain.userHasEntered()
GET		/userHasExited						controllers.Brain.userHasExited()
GET		/reset								controllers.Brain.reset(cause : String)
GET 	/nextCommand						controllers.Brain.nextCommand()