# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		controllers.Assets.at(path="/public", file)

#Elevator
GET		/call								controllers.Escalator.call(atFloor : Int ,to : String)
GET		/go									controllers.Escalator.go(floorToGo : Int)
GET		/userHasEntered						controllers.Escalator.userHasEntered()
GET		/userHasExited						controllers.Escalator.userHasExited()
GET		/reset								controllers.Escalator.reset(cause : String)
GET 	/nextCommand						controllers.Escalator.nextCommand()